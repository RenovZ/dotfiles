// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "format_on_save": "language_server",
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
  },
  // "rust-analyzer.cargo.buildScripts.enable": true,
  // "agent": {
  //   "default_model": {
  //     "provider": "copilot_chat",
  //     "model": "gpt-4o"
  //   },
  //   "version": "2"
  // },
  "features": {
    "edit_prediction_provider": "zed"
  },
  // "vim_mode": true,
  "preferred_line_length": 120,
  "soft_wrap": "preferred_line_length",
  "theme": {
    "light": "One Light",
    "dark": "One Dark"
  },
  "ui_font_size": 14,
  // "line_height": "comfortable",
  "ui_font_family": "Hack Nerd Font",
  "ui_font_weight": 400,
  "buffer_font_size": 14,
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 1.4
  },
  "minimap": {
    "show": "auto",
    "thumb": "always",
    "thumb_border": "left_open",
    "current_line_highlight": "all"
  },
  "terminal": {
    "font_size": 16,
    "font_family": "Hack Nerd Font Mono",
    "line_height": "standard",
    "font_weight": 600
  },
  "inlay_hints": {
    "show_type_hints": true,
    "enabled": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "show_other_hints": true,
    "show_parameter_hints": true
  },
  "formatter": [
    {
      "language_server": {
        "name": "rust-analyzer"
      }
    },
    {
      "external": {
        "command": "sed",
        "arguments": [
          "-e",
          "s/ *$//"
        ]
      }
    }
  ],
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy" // rust-analyzer.check.command (default: "check")
        }
      }
    },
    "clangd": {
      "binary": {
        // "path": "C:/Program Files/LLVM/bin/clangd.exe",
        "arguments": [
          "--function-arg-placeholders=1",
          "--background-index", // 启用全局索引，加快代码跳转速度
          "--compile-commands-dir=.", // 指定编译数据库（如果有 compile_commands.json）
          "--clang-tidy", // 启用 Clang-Tidy
          "--cross-file-rename", // 支持跨文件重命名
          "--completion-style=detailed"
        ]
      }
    }
  }
}
